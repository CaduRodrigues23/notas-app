<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecundary</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:colorForeground">?android:attr/panelColorForeground</item>
    </style>

    <style name="AppTheme.Popup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorAccent</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorTextInputsLogin</item>
        <item name="android:textColorLink">@color/colorTextInputsLogin</item>
        <item name="android:textColorHighlight">@color/colorTextInputsLogin</item>
        <item name="android:textSize">20sp</item>

        <item name="colorAccent">@color/colorTextInputsLogin</item>
        <item name="colorControlNormal">@color/colorTextInputsLogin</item>
        <item name="colorControlActivated">@color/colorTextInputsLogin</item>
    </style>

</resources>
