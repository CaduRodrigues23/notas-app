<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app=""
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardDisciplina"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/backgroundDefaultLight"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/descricaoDisciplina"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:background="@color/colorGradeOver">

            <TextView
                android:id="@+id/disciplina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorTextDefaultLight"
                android:text="Linguagens Formais e Autômatos"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/curso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextDefaultLight"
                    android:text="Ciência da Computação">
                </TextView>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/codigoMateria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/colorTextDefaultLight"
                    android:text="CCB10332"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <Button
                    android:id="@+id/btn_sugerir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome errado?"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_weight="0"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:minHeight="30dp" />

            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/listaAvaliacoes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <!--av1 begin-->
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/av1_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                card_view:cardElevation="3dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:minWidth="60dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/av1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:gravity="center"
                        android:textColor="@color/sem_nota"
                        android:textAlignment="center"
                        android:textSize="36sp"
                        android:text="-"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop = "2dp"
                        android:paddingBottom= "2dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:background="@color/colorGradeUnder"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/colorTextDefaultLight"
                        android:text="AV1"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!--av1 end-->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <!--av2 begin-->
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/av2_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                card_view:cardElevation="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:minWidth="60dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/av2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:gravity="center"
                        android:textColor="@color/sem_nota"
                        android:textAlignment="center"
                        android:textSize="36sp"
                        android:text="-"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop = "2dp"
                        android:paddingBottom= "2dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:background="@color/colorGradeUnder"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/colorTextDefaultLight"
                        android:text="AV2"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!--av2 end-->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <!--av3 begin-->
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/av3_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                card_view:cardElevation="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:minWidth="60dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/av3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:gravity="center"
                        android:textColor="@color/sem_nota"
                        android:textAlignment="center"
                        android:textSize="36sp"
                        android:text="-"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop = "2dp"
                        android:paddingBottom= "2dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:background="@color/colorGradeUnder"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/colorTextDefaultLight"
                        android:text="AV3"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!--av3 end-->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <!--media begin-->
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/media_card"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                card_view:cardElevation="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:minWidth="@dimen/list_item_horario"
                    android:layout_height="match_parent"

                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/media"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:background="@color/colorGradeUnder"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textSize="45sp"
                        android:textColor="@color/colorTextDefaultLight"
                        android:text="-"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!--media end-->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

