<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardDisciplina"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_feed_size"
    android:layout_margin="5dp"
    card_view:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fundo_feed_sem_foto">

        <TextView
            android:id="@+id/tv_feed_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_feed_mensagem"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:paddingRight="5dp"
            android:text="00/00/0000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_feed_mensagem"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:paddingLeft="@dimen/feed_title_no_photo_padding_horizontal"
            android:paddingRight="@dimen/feed_title_no_photo_padding_horizontal"
            android:text="Prof. Alessandro Karppel JordÃ£o contemplado no edital PAq1/2016, mais de trinta professores selecionados."
            android:textAllCaps="true"
            android:textColor="@color/colorTextDefaultLight"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/tv_feed_autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_feed_mensagem"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:text="- Maxmiller Alves"
            android:textSize="16sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>