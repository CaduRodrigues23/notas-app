        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:columnCount="3"
        android:columnOrderPreserved="false"
        android:clipToPadding="false"
        android:background="@color/backgroundDefaultLight"
        android:alignmentMode="alignBounds">

        <LinearLayout
            android:orientation="vertical"
            android:elevation="0dp"
            android:background="@drawable/btn_dashboard"
            android:layout_height="@dimen/dashboard_button_side"
            android:layout_width="@dimen/dashboard_button_side"
            android:id="@+id/ll_dashboard_button_news"
            android:layout_marginRight="@dimen/dashboard_button_right_margin"
            tools:layout_marginBottom="@dimen/dashboard_button_icon_vertical_margin">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="@dimen/dashboard_button_icon_side"
                android:layout_height="@dimen/dashboard_button_icon_side"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dashboard_button_icon_horizontal_margin"
                tools:layout_marginTop="@dimen/dashboard_button_icon_vertical_margin"
                android:background="@drawable/ic_local_library_white_24dp"></LinearLayout>

            <TextView
                android:text="@string/dashboard_button_news"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dashboard_button_text_side"
                tools:textColor="@color/colorTextInteractiveLight"
                android:layout_width="match_parent"
                android:id="@+id/tv_button_news"
                tools:padding="@dimen/dashboard_button_text_padding"
                tools:text="@string/dashboard_button_news"
                android:textAlignment="center"
                android:allowUndo="false"
                android:textStyle="normal|bold"
                android:elevation="0dp"
                android:hyphenationFrequency="none" />

        </LinearLayout>

