<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/backgroundDefaultLight">

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="200dp"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="false"
        tools:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:orientation="vertical"
            android:elevation="0dp"
            android:background="@drawable/btn_dashboard"
            android:layout_height="@dimen/dashboard_button_side"
            android:layout_width="@dimen/dashboard_button_side"
            android:id="@+id/ll_dashboard_button_news"
            android:layout_marginRight="@dimen/dashboard_button_right_margin">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="@dimen/dashboard_button_icon_side"
                android:layout_height="@dimen/dashboard_button_icon_side"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dashboard_button_icon_horizontal_margin"
                android:layout_marginTop="@dimen/dashboard_button_icon_vertical_margin"
                android:background="@drawable/ic_local_library_white_24dp"></LinearLayout>

            <TextView
                android:layout_height="wrap_content"
                android:textSize="@dimen/dashboard_button_text_side"
                android:textColor="@color/colorTextInteractiveLight"
                android:layout_width="match_parent"
                android:id="@+id/tv_button_news"
                android:padding="@dimen/dashboard_button_text_padding"
                android:text="@string/dashboard_button_news"
                android:textAlignment="center"
                android:allowUndo="false"
                android:textStyle="normal|bold"
                android:elevation="0dp"
                android:hyphenationFrequency="none" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:elevation="0dp"
            android:background="@drawable/btn_dashboard"
            android:layout_height="@dimen/dashboard_button_side"
            android:layout_width="@dimen/dashboard_button_side"
            android:id="@+id/ll_dashboard_button_grades"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="@dimen/dashboard_button_icon_side"
                android:layout_height="@dimen/dashboard_button_icon_side"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dashboard_button_icon_horizontal_margin"
                android:layout_marginTop="@dimen/dashboard_button_icon_vertical_margin"
                android:background="@drawable/ic_done_white_24dp"></LinearLayout>

            <TextView
                android:layout_height="wrap_content"
                android:textSize="@dimen/dashboard_button_text_side"
                android:textColor="@color/colorTextInteractiveLight"
                android:layout_width="match_parent"
                android:id="@+id/tv_button_grades"
                android:padding="@dimen/dashboard_button_text_padding"
                android:text="@string/dashboard_button_grades"
                android:textAlignment="center"
                android:allowUndo="false"
                android:textStyle="normal|bold"
                android:elevation="0dp"
                android:hyphenationFrequency="none" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:elevation="0dp"
            android:background="@drawable/btn_dashboard"
            android:layout_height="@dimen/dashboard_button_side"
            android:layout_width="@dimen/dashboard_button_side"
            android:id="@+id/ll_dashboard_button_timetable"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="@dimen/dashboard_button_icon_side"
                android:layout_height="@dimen/dashboard_button_icon_side"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dashboard_button_icon_horizontal_margin"
                android:layout_marginTop="@dimen/dashboard_button_icon_vertical_margin"
                android:background="@drawable/ic_alarm_white_24dp"></LinearLayout>

            <TextView
                android:layout_height="wrap_content"
                android:textSize="@dimen/dashboard_button_text_side"
                android:textColor="@color/colorTextInteractiveLight"
                android:layout_width="match_parent"
                android:id="@+id/tv_button_timetable"
                android:padding="@dimen/dashboard_button_text_padding"
                android:text="@string/dashboard_button_timetable"
                android:textAlignment="center"
                android:allowUndo="false"
                android:textStyle="normal|bold"
                android:elevation="0dp"
                android:hyphenationFrequency="none" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:elevation="0dp"
            android:background="@drawable/btn_dashboard"
            android:layout_height="@dimen/dashboard_button_side"
            android:layout_width="@dimen/dashboard_button_side"
            android:id="@+id/ll_dashboard_button_bus"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/ll_dashboard_button_news"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="@dimen/dashboard_button_icon_side"
                android:layout_height="@dimen/dashboard_button_icon_side"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dashboard_button_icon_horizontal_margin"
                android:layout_marginTop="@dimen/dashboard_button_icon_vertical_margin"
                android:background="@drawable/ic_directions_bus_white_24dp"></LinearLayout>

            <TextView
                android:layout_height="wrap_content"
                android:textSize="@dimen/dashboard_button_text_side"
                android:textColor="@color/colorTextInteractiveLight"
                android:layout_width="match_parent"
                android:id="@+id/tv_button_bus"
                android:padding="@dimen/dashboard_button_text_padding"
                android:text="@string/dashboard_button_bus"
                android:textAlignment="center"
                android:allowUndo="false"
                android:textStyle="normal|bold"
                android:elevation="0dp"
                android:hyphenationFrequency="none" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:elevation="0dp"
            android:layout_height="@dimen/dashboard_button_side"
            android:layout_width="@dimen/dashboard_button_side"
            android:id="@+id/ll_dashboard_button_groups"
            android:background="@drawable/btn_dashboard_coming_soon"
            android:foreground="@drawable/ic_coming_soon"
            android:layout_alignTop="@+id/ll_dashboard_button_bus"
            android:layout_alignLeft="@+id/ll_dashboard_button_timetable"
            android:layout_alignStart="@+id/ll_dashboard_button_timetable">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="@dimen/dashboard_button_icon_side"
                android:layout_height="@dimen/dashboard_button_icon_side"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dashboard_button_icon_horizontal_margin"
                android:layout_marginTop="@dimen/dashboard_button_icon_vertical_margin"
                android:background="@drawable/ic_group_white_24dp"></LinearLayout>

            <TextView
                android:layout_height="wrap_content"
                android:textSize="@dimen/dashboard_button_text_side"
                android:textColor="@color/colorTextInteractiveLight"
                android:layout_width="match_parent"
                android:id="@+id/tv_button_groups"
                android:padding="@dimen/dashboard_button_text_padding"
                android:text="@string/dashboard_button_groups"
                android:textAlignment="center"
                android:allowUndo="false"
                android:textStyle="normal|bold"
                android:elevation="0dp"
                android:hyphenationFrequency="none" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:elevation="0dp"
            android:layout_height="@dimen/dashboard_button_side"
            android:layout_width="@dimen/dashboard_button_side"
            android:id="@+id/ll_dashboard_button_ranking"
            android:background="@drawable/btn_dashboard_coming_soon"
            android:foreground="@drawable/ic_coming_soon"
            android:layout_alignTop="@+id/ll_dashboard_button_groups"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="@dimen/dashboard_button_icon_side"
                android:layout_height="@dimen/dashboard_button_icon_side"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dashboard_button_icon_horizontal_margin"
                android:layout_marginTop="@dimen/dashboard_button_icon_vertical_margin"
                android:background="@drawable/ic_star_white_24dp"></LinearLayout>

            <TextView

                android:layout_height="wrap_content"
                android:textSize="@dimen/dashboard_button_text_side"
                android:textColor="@color/colorTextInteractiveLight"
                android:layout_width="match_parent"
                android:id="@+id/tv_button_ranking"
                android:padding="@dimen/dashboard_button_text_padding"
                android:text="@string/dashboard_button_ranking"
                android:textAlignment="center"
                android:allowUndo="false"
                android:textStyle="normal|bold"
                android:elevation="0dp"
                android:hyphenationFrequency="none" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:elevation="0dp"
            android:layout_height="@dimen/dashboard_button_side"
            android:layout_width="@dimen/dashboard_button_side"
            android:id="@+id/ll_dashboard_button_schedule"
            android:background="@drawable/btn_dashboard_coming_soon"
            android:foreground="@drawable/ic_coming_soon"
            android:layout_below="@+id/ll_dashboard_button_bus"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="@dimen/dashboard_button_icon_side"
                android:layout_height="@dimen/dashboard_button_icon_side"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dashboard_button_icon_horizontal_margin"
                android:layout_marginTop="@dimen/dashboard_button_icon_vertical_margin"
                android:background="@drawable/ic_school_white_24dp"></LinearLayout>

            <TextView
                android:layout_height="wrap_content"
                android:textSize="@dimen/dashboard_button_text_side"
                android:textColor="@color/colorTextInteractiveLight"
                android:layout_width="match_parent"
                android:id="@+id/tv_button_schedule"
                android:padding="@dimen/dashboard_button_text_padding"
                android:text="@string/dashboard_button_schedule"
                android:textAlignment="center"
                android:allowUndo="false"
                android:textStyle="normal|bold"
                android:elevation="0dp"
                android:hyphenationFrequency="none" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:elevation="0dp"
            android:background="@drawable/btn_dashboard_coming_soon"
            android:layout_height="@dimen/dashboard_button_side"
            android:layout_width="@dimen/dashboard_button_side"
            android:id="@+id/ll_dashboard_button_requests"
            android:foreground="@drawable/ic_coming_soon"
            android:layout_alignTop="@+id/ll_dashboard_button_schedule"
            android:layout_alignLeft="@+id/ll_dashboard_button_groups"
            android:layout_alignStart="@+id/ll_dashboard_button_groups">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="@dimen/dashboard_button_icon_side"
                android:layout_height="@dimen/dashboard_button_icon_side"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dashboard_button_icon_horizontal_margin"
                android:layout_marginTop="@dimen/dashboard_button_icon_vertical_margin"
                android:background="@drawable/ic_content_paste_white_24dp"></LinearLayout>

            <TextView
                android:layout_height="wrap_content"
                android:textSize="@dimen/dashboard_button_text_side"
                android:textColor="@color/colorTextInteractiveLight"
                android:layout_width="match_parent"
                android:id="@+id/tv_button_requests"
                android:padding="@dimen/dashboard_button_text_padding"
                android:text="@string/dashboard_button_requests"
                android:textAlignment="center"
                android:allowUndo="false"
                android:textStyle="normal|bold"
                android:elevation="0dp"
                android:hyphenationFrequency="none" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:elevation="0dp"
            android:background="@drawable/btn_dashboard"
            android:layout_height="@dimen/dashboard_button_side"
            android:layout_width="@dimen/dashboard_button_side"
            android:id="@+id/ll_dashboard_button_logout"
            android:layout_alignTop="@+id/ll_dashboard_button_requests"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="@dimen/dashboard_button_icon_side"
                android:layout_height="@dimen/dashboard_button_icon_side"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dashboard_button_icon_horizontal_margin"
                android:layout_marginTop="@dimen/dashboard_button_icon_vertical_margin"
                android:background="@drawable/ic_exit_to_app_white_24dp"></LinearLayout>

            <TextView
                android:layout_height="wrap_content"
                android:textSize="@dimen/dashboard_button_text_side"
                android:textColor="@color/colorTextInteractiveLight"
                android:layout_width="match_parent"
                android:id="@+id/tv_button_logout"
                android:padding="@dimen/dashboard_button_text_padding"
                android:text="@string/dashboard_button_logout"
                android:textAlignment="center"
                android:allowUndo="false"
                android:textStyle="normal|bold"
                android:elevation="0dp"
                android:hyphenationFrequency="none" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:addStatesFromChildren="false"
        android:orientation="horizontal"
        android:keepScreenOn="false"
        android:layout_weight="0.01">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:addStatesFromChildren="false"
        android:orientation="horizontal"
        android:keepScreenOn="false"
        android:layout_weight="0.01">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:addStatesFromChildren="false"
        android:orientation="horizontal"
        android:keepScreenOn="false"
        android:layout_weight="0.01">

    </LinearLayout>

</LinearLayout>