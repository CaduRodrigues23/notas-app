<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_horario">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_horario"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@color/backgroundDefaultLight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:30"
            android:id="@+id/tv_horario_horario_inicial"
            android:textColor="@color/colorTextDefaultDark"
            android:layout_below="@+id/tv_horario_dia_semana"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:50"
            android:id="@+id/tv_horario_horario_termino"
            android:textColor="@color/colorTextDefaultDark"
            android:layout_below="@+id/tv_horario_horario_inicial"/>

        <View
            android:layout_width="@dimen/divider_vertical_margin"
            android:layout_height="wrap_content"
            android:id="@+id/horario_divider"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/tv_horario_dia_semana"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@+id/tv_horario_horario_inicial"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programação Orientada a Objetos"
            android:id="@+id/tv_horario_nome_materia"
            android:textColor="@color/colorTextDefaultDark"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/tv_horario_dia_semana"
            android:layout_toRightOf="@+id/horario_divider"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leonardo Cordeiro"
            android:id="@+id/tv_horario_professor_materia"
            android:textColor="@color/colorTextDefaultDark"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/tv_horario_nome_materia"
            android:layout_toRightOf="@+id/horario_divider"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_vertical_margin"
        android:background="@color/colorDashboardButtonDisabled"
        android:layout_alignParentBottom="@+id/rl_horario"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"/>
</RelativeLayout>